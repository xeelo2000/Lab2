<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lab2.MainPage">

    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
               
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <VerticalStackLayout BackgroundColor ="Red" Grid.Row="0" Grid.Column="0">
                <Button Text="Add Entry" Clicked="AddMovie"/>
                <Button Text="Delete Entry" Clicked="ChangeMovie"/>
                <Button Text="Edit Entry" Clicked="AddMovie"/>
            </VerticalStackLayout>
        </Grid>
    </ScrollView>

</ContentPage>
